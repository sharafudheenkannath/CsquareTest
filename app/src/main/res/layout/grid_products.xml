<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_content_grid_products"
    android:background="@drawable/bg_stroke_grid_products"
    android:padding="@dimen/padding_content_grid_products">

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="@color/text_color_product_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@id/tvLabelPack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProductName" />

    <TextView
        android:id="@+id/tvLabelPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pack"
        app:layout_constraintBottom_toTopOf="@id/tvValuePack"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvValuePack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10GM"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLabelPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        app:layout_constraintBottom_toTopOf="@id/tvValuePrice"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvValuePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="943"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>